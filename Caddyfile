{
	log {
		format json
	}
}

:5080 {
	# Redirect root path to /blog/
	@root {
		path /
	}
	redir @root /blog/ 308

	handle_path /blog/* {
		root * /srv/blog
		templates {
			extensions {
				hitCounter {
					style bright_green
					pad_digits 7
				}
			}
		}
		file_server {
			index index.html
		}
	}

	handle_path /public/* {
		root * /srv/public
		file_server browse
	}

	handle_path /unlisted/* {
		root * /srv/unlisted
		file_server
	}
}
